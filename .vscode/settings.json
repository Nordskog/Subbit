{
    
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.js.map": true,
        "**/*.js": { "when": "$(basename).ts" },
        "**/**.js": { "when": "$(basename).tsx" },
        "**/*.scss.d.ts": true,
        "**/node_modules/": true, //<-- To hide node modules files
        "**/*.spec.ts": true //<-- To hide cli generated files
    },
    "git.ignoreLimitWarning": true,
    "explorer.autoReveal": false
}