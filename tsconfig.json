{
  "compilerOptions": 
  {
    "module": "commonjs",
    "target": "es6",
    "lib": [ "es6", "dom" ],
    "sourceMap": true,
    "rootDir": ".",
    "baseUrl": ".",
    "typeRoots": [ "types" ],
    "jsx": "react",
    "paths": {

      "~/*": [ "./app/*" ],
      "css/*": [ "./css/*" ],
      "assets/*": [ "./assets/*" ],
      "root/*": [ "./*" ]
    },

    "declaration": false,
    "noImplicitAny": false,
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true  //Necessary for react-svg

  },
  "exclude": [
    "node_modules"
  ]


}
